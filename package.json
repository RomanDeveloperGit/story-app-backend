{
  "name": "story-app-backend",
  "description": "An application for reading and writing stories.",
  "author": {
    "name": "Roman Sukhinin",
    "email": "roman.developer@mail.ru"
  },
  "private": false,
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "setup": "yarn && husky install",
    "migrate:add": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "build": "cross-env NODE_ENV=production nest build",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "start:migrate:prod": "yarn migrate:deploy && yarn start:prod",
    "lint:check": "eslint \"src/**/*.{js,mjs,cjs,ts,mts}\"",
    "lint:fix": "eslint \"src/**/*.{js,mjs,cjs,ts,mts}\" --fix"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.13.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/schematics": "^10.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.41.0",
    "eslint-kit": "^10.0.0",
    "husky": "^9.0.11",
    "prettier": "^3.0.0",
    "prisma": "^5.13.0",
    "semantic-release": "^23.0.8",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
